# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
# Update this to your server's IP address or use 'localhost' for local development
API_BASE_URL=http://localhost:3000

# Admin Configuration
# Add admin email addresses (comma-separated)
ADMIN_EMAILS=your-admin-email@example.com

# Security
# Generate a secure random string for CSRF protection
CSRF_SECRET=your-random-secret-string-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
